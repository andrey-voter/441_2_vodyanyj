<Window x:Class="Task2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="TextBoxQuestion" TextWrapping="Wrap" Text="TextBox" Margin="0,364,219,0" TextChanged="TextBox_TextChanged"/>
        <Button Name="ButtonSend" Click="ButtonSendClick" Content="Send question" HorizontalAlignment="Left" Margin="586,359,0,0" VerticalAlignment="Top" Height="55" Width="90" />
        <Button Name="ButtonCancel" Click="ButtonCancelClick"  Content="Cancel calculations" Margin="691,359,10,20" />
        <ListView Name="Chat" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,10,0,75" SelectionChanged="ListView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
